# Application
NODE_ENV=development
PORT=3000
API_PREFIX=v1

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/backend_dev?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=local-dev-jwt-access-secret-change-this-2026
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=local-dev-jwt-refresh-secret-change-this-2026
JWT_REFRESH_EXPIRATION=7d

# Encryption (AES-256-GCM requires 32 bytes key)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=info

# Bull Queue
BULL_BOARD_PATH=/admin/queues

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Graceful Shutdown Configuration                                                                                                                                                                           
SHUTDOWN_TIMEOUT=30000          # Total shutdown timeout (ms)                                                                                    
QUEUE_DRAIN_TIMEOUT=20000       # Max time to wait for queue jobs (ms)
WEBSOCKET_CLOSE_TIMEOUT=5000    # Max time to close WebSocket connections (ms)
