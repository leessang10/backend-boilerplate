apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
type: Opaque
stringData:
  # Base64 encode these values before applying
  database-url: "postgresql://user:password@postgres:5432/dbname"
  jwt-access-secret: "your-super-secret-jwt-access-key-min-32-chars"
  jwt-refresh-secret: "your-super-secret-jwt-refresh-key-min-32-chars"
  encryption-key: "your-32-byte-encryption-key!!"
  redis-password: ""
